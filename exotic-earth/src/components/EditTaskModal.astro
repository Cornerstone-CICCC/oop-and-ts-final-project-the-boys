---
const { 
  id = "view-task-modal",
  taskTitle = "CSS Grid Layout", 
  taskId = "TK-1024",
  createdBy = "Sarah Chen",
  status = "In Progress",
  priority = "High",
  dueDate = "Oct 24, 2023",
  description = "Implement..." 
} = Astro.props;
---

<dialog id={id} class="task-modal">
  <div class="modal-wrapper">
    <header class="modal-header">
      <div class="header-left">
        <div class="icon-container">
           <svg ...></svg>
        </div>
        <span class="breadcrumb">TASK DETAILS</span>
      </div>
      <div class="header-right">
        <button class="icon-btn" id="btn-edit-task" title="Edit">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
        </button>
        <button class="icon-btn hover-red" id="btn-delete-task" title="Delete">
          <svg ...></svg>
        </button>
        <div class="v-divider"></div>
        <button class="icon-btn close-trigger" onclick={`this.closest('dialog').close()`}>
          <svg ...></svg>
        </button>
      </div>
    </header>

    <div class="modal-body">
      <section class="title-area">
        <h1 id="view-title">{taskTitle}</h1>
        <p>Task ID: <span class="text-blue" id="view-task-id">{taskId}</span> â€¢ Created by <span id="view-created-by">{createdBy}</span></p>
      </section>

      <div class="info-grid">
        <div class="info-item">
          <label>STATUS</label>
          <div class="badge status" id="view-status">
            <svg ...></svg>
            {status}
          </div>
        </div>
        <div class="info-item">
          <label>PRIORITY</label>
          <div class="badge priority" id="view-priority">
            <svg ...></svg>
            {priority}
          </div>
        </div>
        <div class="info-item">
          <label>DUE DATE</label>
          <div class="badge date" id="view-date">
            <svg ...></svg>
            {dueDate}
          </div>
        </div>
      </div>

      <section class="desc-section">
        <h3><svg ...></svg> Description</h3>
        <div class="desc-box">
          <p id="view-desc">{description}</p>
        </div>
      </section>

      <section class="team-section">
        ...
      </section>
    </div>

    <footer class="modal-footer">
      <button class="btn-cancel" onclick={`this.closest('dialog').close()`}>Close</button>
      <button class="btn-save" id="btn-mark-complete">
        <svg ...></svg>
        Mark as Complete
      </button>
    </footer>
  </div>
</dialog>